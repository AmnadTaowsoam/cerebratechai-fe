{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:coverage": "jest --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:smoke": "playwright test --project=smoke-chromium --workers=1",
    "test:all": "yarn test:ci && yarn e2e",
    "test:a11y": "jest --testPathPattern=accessibility",
    "analyze": "ANALYZE=true yarn build",
    "preview": "yarn build && yarn start",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "security:audit": "npm audit",
    "security:check": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "i18n:check": "node scripts/check-i18n-leaks.js",
    "links:check": "node scripts/check-broken-links.js",
    "http:check": "node scripts/check-http-errors.js",
    "lighthouse:ci": "lhci autorun",
    "lighthouse:local": "npm run build && lhci autorun --config=./lighthouserc.local.json",
    "qa:all": "npm run typecheck && npm run lint && npm run i18n:check && npm run links:check && npm run http:check",
    "qa:ci": "npm run typecheck && npm run lint && npm run i18n:check && npm run e2e:smoke && npm run lighthouse:ci"
  },
